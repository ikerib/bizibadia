{% extends 'base.html.twig' %}

{% block title %}Guneen mantenua{% endblock %}

{% block body %}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Guneen <small>Mantenua</small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5   form-group pull-right top_search">

            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row" style="display: block;">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <a id="btnNew" href="{{ path('app_bizikleta_new') }}" class="btn btn-success "><i class="fa fa-plus-square"></i> BERRIA</a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    <table class="table table-striped projects datatable">
                        <thead>
                            <tr>
                                <th>{{ "Kodea" | trans}}</th>
                                <th>{{ "Erregistroa" | trans}}</th>
                                <th>{{ "Bastidorea" | trans}}</th>
                                <th style="width: 20%"></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for bizikletum in bizikletas %}
                            <tr>
                                <td>{{ bizikletum.code }}</td>
                                <td>{{ bizikletum.erregistroa }}</td>
                                <td>{{ bizikletum.bastidorea }}</td>
                                <td class="text-center">
                                    <ul class="list-inline">
                                        <li>
{#                                            <a class="btn btn-primary" href="{{ path('app_bizikleta_edit', {'id': bizikletum.id}) }}"><i class="fa fa-edit"></i> {{ "Editatu" | trans}}</a>#}
