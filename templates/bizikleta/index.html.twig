                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        </li>
                                        <li>{{include('bizikleta/_delete_form.html.twig')}}</li>
                                    </ul>


                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">{{ "Ez dago daturik erakusteko" | trans}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}
